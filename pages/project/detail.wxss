.project-detail {
  min-height: 100vh;
  background-color: #F2F3F4;
}
.project-detail-location {
  font-size: 28rpx;
  color: #222;
  background-color: #fff;
}
.project-detail-image {
  display: block;
  width: 750rpx;
  height: 420rpx;
}
.project-detail-imageimage {
  width: 100%;
  height: 100%;
}
.project-detail-describe {
  padding-bottom: 30rpx;
  margin-top: -60rpx;
}
.project-detail-describe-content {
  padding: 40rpx;
  margin-left: 30rpx;
  width: 610rpx;
  min-height: 300rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 8px 20px 0 rgba(119, 119, 119, 0.4);
  text-align: center;
}
.project-detail-title {
  color: #222222;
  font-weight: bold;
  margin-bottom: 14rpx;
}
.project-detail-tag {
  text-align: center;
}
.project-detail-tag > text {
  font-size: 24rpx;
  color: #222;
  text-align: center;
  background-color: #EBEBEB;
  border-radius: 6rpx;
  padding: 10rpx 15rpx;
  margin-right: 10rpx;
}
.project-detail-paragraph {
  margin-top: 18rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #6B6A72;
  line-height: 34rpx;
  height: 102rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.project-detail-footer {
  position: relative;
  padding: 22rpx;
  height: 80rpx;
}
.project-detail-footer > view {
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  left: 0;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
  padding: 22rpx;
  box-shadow: 0 -7px 11px 0 rgba(181, 181, 181, 0.2);
  font-size: 24rpx;
  color: #6B6A72;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.project-detail-footer > view > view {
  width: 360rpx;
}
.project-detail-footer > view > view:first-child {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.project-detail-footer > view > view button {
  font-size: 32rpx;
  letter-spacing: 4rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff !important;
  width: 240rpx;
  height: 84rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
  background-image: -webkit-linear-gradient(312deg, #FED312 0%, rgba(254, 197, 18, 0.98) 100%);
  background-image: linear-gradient(138deg, #FED312 0%, rgba(254, 197, 18, 0.98) 100%);
  box-shadow: 0 5rpx 8rpx 0 rgba(254, 211, 18, 0.5);
  border-radius: 100rpx;
  border: none !important;
}
.paragraph {
  display: block;
}
.content-title {
  font-size: 40rpx;
  color: #222;
  letter-spacing: 2.22rpx;
  font-weight: bold;
}
.bg-white {
  background-color: #fff;
}
.border-top {
  border-top: 1px solid #ededed;
}
.border-right {
  border-right: 1px solid #ededed;
}
.border-bottom {
  border-bottom: 1px solid #ededed;
}
.border-left {
  border-left: 1px solid #ededed;
}
